{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "jsx-a11y/label-has-for": [
          2,
          {
            "required": {
              "every": [
                "nesting",
                "id"
              ]
            },
            "allowChildren": true
          }
        ],
        "react/jsx-filename-extension": 0,
        "react/react-in-jsx-scope": 0,
        "linebreak-style": 0
    }
}
